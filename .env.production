# Production Environment Variables
# Copy this to .env.local for local production testing
# Set these in your deployment platform (Vercel, Railway, etc.)

# HiAnime API URL (Deploy to Railway/Render and update this)
NEXT_PUBLIC_HIANIME_API_URL=https://your-hianime-api.railway.app

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Caching
ENABLE_PROXY_CACHE=true
PROXY_CACHE_MAX_AGE=3600

# Error Handling
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Feature Flags
ENABLE_VIDEO_PROXY=true
ENABLE_FALLBACK_PROVIDERS=true
ENABLE_RATE_LIMITING=true

# Optional: Upstash Redis for distributed caching
# UPSTASH_REDIS_URL=
# UPSTASH_REDIS_TOKEN=

# Optional: Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=
