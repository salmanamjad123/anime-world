# Production Environment Variables
# Copy this to .env.local for local production testing
# Set these in your deployment platform (Vercel, Railway, etc.)

# HiAnime API URL - Railway Production
NEXT_PUBLIC_HIANIME_API_URL=https://aniwatch-api-production-d3be.up.railway.app

# Video Streaming - Embed iframe (primary, no proxy). Proxy only for HLS fallback.
NEXT_PUBLIC_USE_PROXY=false
NEXT_PUBLIC_PROXY_URL=https://aniwatch-api-production-d3be.up.railway.app/api/v2/proxy

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Caching
ENABLE_PROXY_CACHE=true
PROXY_CACHE_MAX_AGE=3600

# Error Handling
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Feature Flags
ENABLE_FALLBACK_PROVIDERS=true
ENABLE_RATE_LIMITING=false  # Disable for serverless (Vercel handles this)

# Redis (Railway) - shared cache for AniList relations, HiAnime data
# Copy REDIS_URL from Railway Redis service → Variables
REDIS_URL=redis://default:bHQQsCtJEMJnQizDaLfwJiutZmWGpcJA@tramway.proxy.rlwy.net:40903

