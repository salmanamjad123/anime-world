# Anime World - Environment Variables
# Copy this file to .env.local and fill in your values

# =================================
# REQUIRED - HiAnime API
# =================================
# Your self-hosted aniwatch-api endpoint
# Local development: http://localhost:4000
# Production: Deploy to Railway and use that URL
NEXT_PUBLIC_HIANIME_API_URL=http://localhost:4000

# =================================
# OPTIONAL - Production Settings
# =================================
# Rate limiting (requests per IP per minute)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Video proxy caching
ENABLE_PROXY_CACHE=true
PROXY_CACHE_MAX_AGE=3600

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Feature flags
ENABLE_VIDEO_PROXY=true
ENABLE_RATE_LIMITING=true

# =================================
# NOTE: Consumet API Removed!
# =================================
# We now use ONLY HiAnime API for streaming
# No more Consumet, Gogoanime, AnimePahe, or Zoro fallbacks
# This gives you clean, fast streaming with no failed attempts!
